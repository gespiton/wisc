all:
	${MAKE} clean ${MAKE} build && ${MAKE} clean || ${MAKE} clean

build:
	${MAKE} clean
	# Building source code
	if not exist ".\build" mkdir build
	node .\builder\main.js

	# Compile grammar source
	bison build\grammar.y -vd
	flex src\token\token.l
	copy lex.yy.c build\token.c
	copy grammar.tab.c build\grammar.c
	copy grammar.tab.h build\grammar.h
	# Clean grammar source root
	del lex.yy.c grammar.tab.c grammar.tab.h /Q

	# Copy main.c to build
	copy src\main.c build\main.c
	# Compile project
	gcc .\build\*.c -o .\bin\wisc
	# Test running
	${MAKE} run

run:
	.\bin\wisc testing\test1\main

clean:
	if exist ".\build" del ".\build" /Q
